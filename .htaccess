# Redirigir todo al front controller MVC
DirectoryIndex public/index.php

# Habilitar reescritura de URLs
RewriteEngine On
RewriteBase /finalpp2/

# Redirigir la raíz del proyecto a public/index.php
RewriteRule ^$ public/index.php [L]

# No reescribir archivos o directorios existentes (assets, images, etc.)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todo lo demás a public/index.php
RewriteRule ^(.*)$ public/index.php [L,QSA]

# Evitar listado de directorios
Options -Indexes

# Configuración de seguridad
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Proteger archivos sensibles
<FilesMatch "\.(sql|md|log|bak)$">
    Order allow,deny
    Deny from all
</FilesMatch>
